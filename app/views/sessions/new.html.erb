<div class="welcome-container">
  <div class="content">

    <div class="signin">
      <%= form_tag do %>
      <div class="field-container">
        <%= text_field_tag :email, nil, placeholder: 'Email', class:'emailfield' %>
        <%= password_field_tag :password, nil, placeholder: 'Passowrd', class: 'passwordfield' %>
      </div>
      <%=submit_tag "Welcome Back", class:'signinsubmit'%>
      <% end %>
      <p style="font-size:15px;">New to Slack?
        <%= link_to "Sign Up", sign_up_path, style:"color:#FFFFFF", class:"signup" %></p>

    </div>
  </div>
</div>
